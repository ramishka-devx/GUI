<Window x:Class="kalderama.EditFoodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Food" Height="650" Width="450"
        Background="#F7F7F7" WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI" FontSize="14">

    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Margin="10">
            <StackPanel>

                <!-- Title -->
                <TextBlock Text="Edit Food" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#333"/>

                <!-- Food Title -->
                <TextBlock Text="Food Title" FontSize="14" Foreground="#666" Margin="0,5"/>
                <Border Background="White" BorderBrush="#CCC" BorderThickness="1" CornerRadius="5" Padding="5">
                    <TextBox Name="txtTitle" Background="Transparent" BorderThickness="0"/>
                </Border>

                <!-- Price -->
                <TextBlock Text="Price (LKR)" FontSize="14" Foreground="#666" Margin="10,5,0,5"/>
                <Border Background="White" BorderBrush="#CCC" BorderThickness="1" CornerRadius="5" Padding="5">
                    <TextBox Name="txtPrice" Background="Transparent" BorderThickness="0"/>
                </Border>

                <!-- Image Display -->
                <TextBlock Text="Food Image" FontSize="14" Foreground="#666" Margin="10,10,0,5"/>
                <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="5" Padding="5">
                    <Image Name="foodImage" Width="300" Height="180" Stretch="UniformToFill"/>
                </Border>

                <!-- Image URL (Read-Only) -->
                <TextBlock Text="Image URL" FontSize="14" Foreground="#666" Margin="10,5,0,5"/>
                <Border Background="#EEE" BorderBrush="#CCC" BorderThickness="1" CornerRadius="5" Padding="5">
                    <TextBox Name="txtImageUrl" Background="Transparent" BorderThickness="0" IsReadOnly="True" Foreground="#888"/>
                </Border>

                <!-- Update Button -->
                <Button Content="Update Food"
                        Width="300" Height="45"
                        Background="#0B8AD9" Foreground="White"
                        FontWeight="Bold" FontSize="16"
                        HorizontalAlignment="Center"
                        Click="UpdateFood_Click"
                        Margin="20,15,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="10"
                                                Padding="10"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</Window>
