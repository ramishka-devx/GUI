<Window x:Class="kalderama.EditFoodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Food" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Edit Food" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Food Title -->
            <TextBox Name="txtTitle" Width="300" Height="30" Margin="0,10"/>

            <!-- Price -->
            <TextBox Name="txtPrice" Width="300" Height="30" Margin="0,10"/>

            <!-- Display the Image -->
            <Image Name="foodImage" Width="300" Height="200" Margin="0,10"/>

            <!-- Food Image URL (Read-Only) -->
            <TextBox Name="txtImageUrl" Width="300" Height="30" Margin="0,10" IsReadOnly="True"/>

            <!-- Submit Button -->
            <Button Content="Update Food" Width="300" Height="40" HorizontalAlignment="Center" Margin="0,20" Click="UpdateFood_Click"/>
        </StackPanel>
    </Grid>
</Window>
