<Window x:Class="kalderama.DashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="500" Width="900">
    <Grid>
        <!-- Define Grid Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#2C3E50" Width="200" VerticalAlignment="Stretch">
            <TextBlock Text="Dashboard" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="10"/>

            <Button Name="btndash" Content="Dashboard" Width="180" Height="40" Margin="10" 
                    Background="Transparent" Foreground="White" BorderBrush="White" Click="btndash_Click"/>

            <Button Name="btnOrders" Content="Orders" Width="180" Height="40" Margin="10" 
                    Background="Transparent" Foreground="White" BorderBrush="White" Click="btnOrders_Click"/>

            <Button Name="btnFoods" Content="Foods" Width="180" Height="40" Margin="10" 
                    Background="Transparent" Foreground="White" BorderBrush="White" Click="btnFoods_Click"/>
        </StackPanel>

        <!-- Main Content Area (Frame to Load Pages) -->
        <Frame Name="MainFrame" Grid.Column="1"/>
    </Grid>
</Window>
