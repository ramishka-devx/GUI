<Window x:Class="kalderama.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="300">
    <Grid>
        <TextBox Name="txtIdentifier" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" />
        <PasswordBox Name="txtPassword" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0"/>
        <Button Name="btnLogin" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,150,0,0" Content="Login" Click="BtnLogin_Click"/>
    </Grid>
</Window>
