<Window x:Class="kalderama.AddFoodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Food" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Add New Food" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Food Title -->
            <TextBox Name="txtTitle" Width="300" Height="30" Margin="0,10"/>

            <!-- Price -->
            <TextBox Name="txtPrice" Width="300" Height="30" Margin="0,10"/>

            <!-- Category Selection -->
            <ComboBox Name="cmbCategory" Width="300" Height="30" Margin="0,10">
                <ComboBoxItem Content="Beverages" />
                <ComboBoxItem Content="Desserts" />
                <ComboBoxItem Content="Main Course" />
                <ComboBoxItem Content="Snacks" />
            </ComboBox>

            <!-- Image URL -->
            <!-- Remove this field for image upload -->
            <Button Content="Choose Image" Width="300" Height="30" Margin="0,10" Click="ChooseImage_Click"/>
            <TextBox Name="txtImagePath" Width="300" Height="30" Margin="0,10" IsReadOnly="True"/>

            <!-- Submit Button -->
            <Button Content="Add Food" Width="300" Height="40" HorizontalAlignment="Center" Margin="0,20" Click="AddFood_Click"/>
        </StackPanel>
    </Grid>
</Window>
